<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alvion">

    <!-- Emergency Call Permission (not required for ACTION_DIAL, but ok to keep) -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- Vibration permission for Vibrator API -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Optional: declare telephony as non-required so app can install on tablets/etc -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- Camera permission + optional camera hardware -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ALVION">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ALVION">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
